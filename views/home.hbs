<!DOCTYPE html>
<html>
  <head>
    <title>Home</title>
  </head>
  <body>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/video">Video</a></li>
        <li><a href="/admin">Admin</a></li>
      </ul>
    </nav>
    <h1>Welcome to our video sharing platform</h1>
    <form action="/search" method="GET">
      <input type="text" name="search" placeholder="Search for a video...">
      <button type="submit">Search</button>
    </form>
    {{#if videos}}
      <ul>
        {{#each videos}}
          <li>
            <img src="{{image}}" alt="{{title}}">
            <h2>{{title}}</h2>
            <p>Channel: {{channel}}</p>
            <p>Likes: {{likes}}</p>
            <p>Upload date: {{uploadDate}}</p>
            <a href="/video/{{videoId}}">View details</a>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No videos available</p>
    {{/if}}
  </body>
</html>
